#page{
    height: 100vh;
    width: 100vw;
    background: yellow;
    display: flex;
    flex-direction: column;
}

#search-bar{
    width: 100%;
    height: 100rpx;
    background: red;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
}
#daily{
    color: white;
}
#search-view{
    background: white;
    width: 500rpx;
    height: 70rpx;
    border-radius: 15rpx;
    display: flex;
    justify-content: space-evenly;
    align-items: center;

}
#search-icon{
    width: 50rpx;
    height: 50rpx;
}
#search-view>input{
    width: 400rpx;
    height: 50rpx;
}

#type-list{
    width: 100%;
    height: 80rpx;
    background: pink;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
#type-scroll{
    /* flex-grow: 1; */
    width: 670rpx;
    height: 100%;
    /* background: greenyellow; */
}
.plus{
    width: 80rpx;
    height: 80rpx;
    /* background: yellow; */
    line-height: 80rpx;
    text-align: center;
    font-size: 50rpx;
    font-weight: bold;
}
#scroll-bar{
    height: 100%;
    display: flex;
}
#scroll-bar view{
   height: 100%;
   width: 150rpx;
   /* border: solid rebeccapurple 1px; */
   line-height: 80rpx;
   text-align: center;
}
#news-list-swiper{
    flex-grow: 1;
    background: white;
}
.selected{
    font-weight: bold;
}